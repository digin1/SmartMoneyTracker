<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="600dp"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.smt.smartmoneytracker.AddTransaction"
    tools:showIn="@layout/activity_add_transaction">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/cash_data"
            android:id="@+id/textView2"
            android:textColor="#000"
            android:textSize="26sp" />
        
        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            android:hint="@string/amount_dat"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:selectAllOnFocus="false"
            android:textIsSelectable="true"
            android:textSize="32sp"
            android:singleLine="true" />

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lay2"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/editText">
            <TableLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:text="@string/sda"
                        android:id="@+id/tra1" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:id="@+id/edittra1"
                        android:hint="@string/choose" />

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:text="@string/merch"
                        android:id="@+id/tra2" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:id="@+id/edittra2"
                        android:hint="@string/choose" />

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sdfs"
                        android:layout_weight="50"
                        android:id="@+id/tra3" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:id="@+id/edittra3"
                        android:hint="@string/chcat" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date"
                        android:layout_weight="50"
                        android:id="@+id/tra4" />
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="date"
                        android:layout_weight="50"
                        android:ems="10"
                        android:id="@+id/editText2" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notes"
                        android:layout_weight="50"
                        android:id="@+id/tra5" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:layout_weight="50"
                        android:ems="10"
                        android:id="@+id/editText3"
                        android:hint="@string/wabout" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>




